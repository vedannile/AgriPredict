// OpenWeatherMap (Free tier: 1000 calls/day)
const WEATHER_API_KEY = 'your_openweather_key';
const WEATHER_BASE_URL = 'https://api.openweathermap.org/data/2.5';

const getWeatherData = async (lat, lon) => {
  const current = await fetch(`${WEATHER_BASE_URL}/weather?lat=${lat}&lon=${lon}&appid=${WEATHER_API_KEY}`);
  const forecast = await fetch(`${WEATHER_BASE_URL/forecast?lat=${lat}&lon=${lon}&appid=${WEATHER_API_KEY}`);
  
  return {
    current: await current.json(),
    forecast: await forecast.json()
  };
};
